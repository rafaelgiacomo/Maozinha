@model Maozinha.UI.Web.ViewModel.IndexProjetosEntidadeViewModel

@using Maozinha.UI.Web.ViewModel;

@{
    ViewBag.Title = "Projetos de Entidade";
}

<div class="col-md-12">
    <h3 class="borda">Projetos da Entidade</h3>

    <br>
    @Html.ActionLink("Adicionar Projeto", "AdicionarProjeto", "PerfilEntidade", null, new { @class = "btn btn-primary" })
    <br><br>

    <div class="col-md-12 resultado">

        <div class="box-body">
            <br>
            <table id="projetos" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Código</th>
                        <th>Nome</th>
                        <th>Data Início</th>
                        <th>Data Fim</th>
                        <th>Qtd Vagas</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListaProjetos)
                    {
                        <tr>
                            <td>
                                @if (item.Arquivo != null)
                                {
                                    <img style="width: 100px; height: 100px;" src="@ArquivoViewModel.CaminhoUpload.Remove(0, 1)/@item.Arquivo.Id.ToString()@item.Arquivo.Tipo" />
                                }
                                else
                                {
                                    <img style="width: 100px; height: 100px;" src="" />
                                }
                            </td>

                            <td>@item.Id</td>
                            <td>@item.Nome</td>
                            <td>@item.DataInicio</td>
                            <td>@item.DataFim</td>
                            <td>@item.QtdVagas</td>
                            <td>
                                @if (!item.Encerrado)
                                {
                                    @Html.ActionLink("Ver Voluntários", "VerVoluntarios", "PerfilEntidade", new { @id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                                    @Html.ActionLink("Editar", "EditarProjeto", "PerfilEntidade", new { @id = item.Id }, new { @class = "btn btn-success btn-xs" })
                                    @Html.ActionLink("Imagem", "ImagemProjeto", "PerfilEntidade", new { @id = item.Id }, new { @class = "btn btn-default btn-xs" })
                                    @Html.ActionLink("Excluir", "ExcluirProjeto", "PerfilEntidade", new { @id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                                }
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th></th>
                        <th>Código</th>
                        <th>Nome</th>
                        <th>Data Início</th>
                        <th>Data Fim</th>
                        <th>Qtd Vagas</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div><!-- /.box-body -->
    </div><!-- /.box -->
</div>

</div>

@section scripts
{
    <link href="~/Scripts/AdminLTE/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/AdminLTE/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#projetos').DataTable({
                language: {
                    "url": 'http://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json'
                }
            });
        });
    </script>
}
