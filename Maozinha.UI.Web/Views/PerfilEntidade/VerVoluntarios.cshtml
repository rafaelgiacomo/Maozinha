@model Maozinha.UI.Web.ViewModel.VerVoluntariosViewModel

@{
    ViewBag.Title = "Voluntários candidatos";
}

<div class="clearfix"></div>
<div class="col-md-12">
    <h3 class="borda">Informações do Projeto</h3>

    <br>

    <div style="background-color: white;">

        <div class="col-md-3">
            <label>Código: </label> @Model.Projeto.Id
        </div>

        <div class="col-md-3">
            <label>Nome: </label> @Model.Projeto.Nome
        </div>

        <div class="col-md-3">
            <label>Data Início: </label> @Model.Projeto.DataInicio
        </div>

        <div class="col-md-3">
            <label>Data Fim: </label> @Model.Projeto.DataFim
        </div>

        <div class="col-md-3">
            <label>Qtd Vagas: </label> @Model.Projeto.QtdVagas
        </div>

        <div class="col-md-3">
            <label>Candidatos Selecionados: </label> 0
        </div>

    </div>

</div>

<div class="clearfix"></div>
<div class="col-md-12">
    <h3 class="borda">Canditatos</h3>

    <div class="col-md-12 resultado">

        <div class="box-body">
            <br>
            <table id="projetos" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Data de Nascimento</th>
                        <th>Telefone</th>
                        <th>E-mail</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListaVoluntarios)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.DataNascimento</td>
                            <td>@item.Telefone</td>
                            <td>@item.Email</td>
                            <td>
                                @Html.ActionLink("Ver Voluntários", "VerVoluntarios", "PerfilEntidade", new { @id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                                @Html.ActionLink("Editar", "EditarProjeto", "PerfilEntidade", new { @id = item.Id }, new { @class = "btn btn-success btn-xs" })
                                @Html.ActionLink("Excluir", "ExcluirProjeto", "PerfilEntidade", new { @id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Nome</th>
                        <th>Data de Nascimento</th>
                        <th>Telefone</th>
                        <th>E-mail</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div><!-- /.box-body -->
    </div><!-- /.box -->

    <br>
</div>
<div class="clearfix"></div>
<br />
<div class="clearfix"></div>
<div class="col-md-12">
    <div class="clearfix"></div>

    <div class="">
        @Html.ActionLink("Voltar", "Projetos", "PerfilEntidade", new { @id = Model.Projeto.Id }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Remover Seleções", "RemoverSelecoes", "PerfilEntidade", new { @id = Model.Projeto.Id }, new { @class = "btn btn-danger" })
        @Html.ActionLink("Encerrar Seleção", "EncerrarSelecoes", "PerfilEntidade", new { @id = Model.Projeto.Id }, new { @class = "btn btn-success" })
    </div>

</div>

@section scripts
{
    <link href="~/Scripts/AdminLTE/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/AdminLTE/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#projetos').DataTable({
                language: {
                    "url": 'http://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json'
                }
            });
        });
    </script>
}
